<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangben.backend.mapper.InviteLinkMapper">

    <resultMap id="BaseResultMap" type="com.zhangben.backend.model.InviteLink">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="creator_id" property="creatorId"/>
        <result column="activity_id" property="activityId"/>
        <result column="max_uses" property="maxUses"/>
        <result column="used_count" property="usedCount"/>
        <result column="expires_at" property="expiresAt"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" parameterType="com.zhangben.backend.model.InviteLink" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO invite_link (code, type, creator_id, activity_id, max_uses, expires_at, status)
        VALUES (#{code}, #{type}, #{creatorId}, #{activityId}, #{maxUses}, #{expiresAt}, #{status})
    </insert>

    <select id="selectByCode" resultMap="BaseResultMap">
        SELECT * FROM invite_link WHERE code = #{code}
    </select>

    <select id="selectByCreatorId" resultMap="BaseResultMap">
        SELECT * FROM invite_link WHERE creator_id = #{creatorId} ORDER BY created_at DESC
    </select>

    <update id="incrementUsedCount">
        UPDATE invite_link SET used_count = used_count + 1 WHERE id = #{id}
    </update>

    <update id="updateStatus">
        UPDATE invite_link SET status = #{status} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM invite_link WHERE id = #{id}
    </delete>

    <insert id="insertUsage">
        INSERT INTO invite_usage (invite_id, user_id) VALUES (#{inviteId}, #{userId})
    </insert>

    <select id="checkUsage" resultType="int">
        SELECT COUNT(*) FROM invite_usage WHERE invite_id = #{inviteId} AND user_id = #{userId}
    </select>

    <!-- V40: GDPR - Delete all invite links created by a user -->
    <delete id="deleteByCreatorId">
        DELETE FROM invite_link WHERE creator_id = #{creatorId}
    </delete>

</mapper>
