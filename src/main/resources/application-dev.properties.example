# ============================================
# 开发环境配置 (Eclipse 直接运行)
# ============================================

# 数据库连接
spring.datasource.url=jdbc:mysql://xxx.xxx.xxx.xxx:3306/databasename?useSSL=false&serverTimezone=Asia/Tokyo&characterEncoding=utf8
spring.datasource.username=
spring.datasource.password=
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# 日志配置 - 开发环境输出到控制台
logging.level.root=INFO
logging.level.com.zhangben=DEBUG

# 显示SQL语句
mybatis.configuration.log-impl=org.apache.ibatis.logging.stdout.StdOutImpl

# 日志格式
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n

# --------------------------------
# CORS Configuration
# --------------------------------
cors.allowed-origin-patterns=http://localhost:5173
cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
cors.allowed-headers=*
cors.exposed-headers=satoken
cors.allow-credentials=true
cors.max-age=3600


# Google SSO
google.client-id=${GOOGLE_CLIENT_ID}

# V43: Microsoft SSO (在 Azure Portal 注册应用后填入)
microsoft.client-id=

# --------------------------------
# Redis 配置 (Sa-Token 会话存储)
# 开发环境连接本地或服务器 Redis
# --------------------------------
spring.data.redis.host=192.168.95.3
spring.data.redis.port=6379
spring.data.redis.password=testtesttest
spring.data.redis.database=0
spring.data.redis.timeout=10s

# --------------------------------
# V14-V17: 应用配置
# --------------------------------
app.base-url=http://localhost:5173

# --------------------------------
# V15/V34: 邮件服务配置 (开发环境)
# 开发环境永远使用 Mock，不发送真实邮件
# --------------------------------
mail.enabled=true
app.mail.provider=mock
app.mail.fallback-enabled=false

# Brevo 配置 (开发环境不使用)
brevo.api-key=
brevo.sender-email=noreply@aabillpay.com
brevo.sender-name=PayYou

# Resend 配置 (开发环境不使用)
resend.api-key=
resend.sender-email=noreply@aabillpay.com
resend.sender-name=PayYou

# --------------------------------
# V24: Cloudflare R2 存储配置 (开发环境)
# 请在此处填入开发环境的 R2 配置
# --------------------------------
r2.account-id=your_dev_account_id
r2.access-key=your_dev_access_key
r2.secret-key=your_dev_secret_key
r2.bucket-name=avatars-dev
r2.public-url=https://image.aabillpay.com

# --------------------------------
# V42: 功能开关 (开发环境)
# --------------------------------
subscription.enabled=true